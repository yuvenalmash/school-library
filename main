require_relative 'app'

class Main

  def run
    puts 'Welcome to School Library App!'
    app=App.new
    loop do
      home_page(app)
    end
  end

  def home_page(app)
    puts [
      '',
      'Please choose an option by entering a number:',
      '1 - List all books',
      '2 - List all people',
      '3 - Create a person',
      '4 - Create a book',
      '5 - Create a rental',
      '6 - Save data to file',
      '7 - List all rentals for a given person\'s id',
      '8 - Exit',
      ''
    ]
    print 'Enter your choice: '
    input = gets.chomp
    close if input == '8'
    home_page_selection(input, app)
  end

  def home_page_selection(input, app)
    case input
    when '1'
      app.list_all_books
    when '2'
      app.list_all_people
    when '3'
      app.create_person
    when '4'
      app.create_book
    when '5'
      app.create_rental
    when '6'
      app.save
    when '7'
      app.list_persons_rentals
    else
      puts 'Invalid input, please try again'
    end
  end

  def close
    puts 'Are you sure you want to exit? [Y/N]'
    input = gets.chomp.upcase
    if input == 'Y'
      puts 'Thank you for using this app!'
      exit
    else
      home_page
    end
  end

end

main = Main.new
main.run
