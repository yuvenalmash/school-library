require_relative 'app'

class Main  
  
  def run
    puts 'Welcome to School Library App!'
    
    loop do
      home_page
    end
  end

  def home_page
    puts [
      '',
      'Please choose an option by entering a number:',
      '1 - List all books',
      '2 - List all people',
      '3 - Create a person',
      '4 - Create a book',
      '5 - Create a rental',
      '6 - List all rentals for a given person\'s id',
      '7 - Exit',
      ''
    ]
    print 'Enter your choice: '
    input = gets.chomp
    app = App.new
    close if input == '7'
    app.home_page_selection(input)
  end

  def close
    puts 'Are you sure you want to exit? [Y/N]'
    input = gets.chomp.upcase
    if input == 'Y'
      puts 'Thank you for using this app!'
      exit
    else
      home_page
    end
  end

end

main = Main.new
main.run
